<Window x:Class="MvvmLight1.EpidemV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Title="Epidemiology"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        DataContext="{Binding Epidem, Source={StaticResource Locator}}" Width="250" Height="450" FontFamily="Segoe UI Symbol">
    <Grid>
        <DockPanel>
            <StatusBar
                Height="25"
                DockPanel.Dock="Bottom" />
            <StackPanel
                Width="50"
                DockPanel.Dock="Left">
                <TextBlock
                    Margin="12"
                    FontFamily="Segoe UI Symbol"
                    FontSize="16"
                    Text="&#xE202;" />


                <ListBox Height="130" />
                <TextBlock
                    Margin="12"
                    FontFamily="Segoe UI Symbol"
                    FontSize="16"
                    Text="&#xE10B;" />
                <ListBox
                    Height="170" />
            </StackPanel>
            <StackPanel>
                <TextBlock
                    FontSize="8"
                    Text="Date" />
                <DatePicker />
                <TextBlock
                    FontSize="8"
                    Text="ICD's"
                    />
                <TextBox />
                <TextBlock
                    FontSize="8"
                    Text="Age" />
                <ComboBox
                    ItemsSource="{Binding AgeGroups}"
                    SelectedIndex="0" />
                <TextBlock
                    FontSize="8"
                    Text="Gender" />
                <ComboBox
                    ItemsSource="{Binding Genders}"
                    SelectedIndex="0" />
                <TextBlock
                    FontSize="8"
                    Text="From Region" />
                <DockPanel>
                    <Button
                        DockPanel.Dock="Right"
                        Width="20"
                        FontFamily="Segoe UI Symbol"
                        FontSize="12"
                        Content="&#x2638;"
                        Command="{Binding EditMap}" />
                    <ComboBox />
                </DockPanel>


                <TextBlock
                    FontSize="8"
                    Text="Referred by" />

                <ComboBox
                    ItemsSource="{Binding Qualifications}"
                    SelectedIndex="0" />

                <TextBlock
                    FontSize="8" Text="Treated by" />

                <ComboBox
                    ItemsSource="{Binding Qualifications}"
                    SelectedIndex="2" />

                <TextBlock
                    FontSize="8"
                    Text="Specialty" />

                <ComboBox
                    ItemsSource="{Binding Treaters}"
                    SelectedIndex="0" />

                <TextBlock
                    FontSize="8"
                    Text="Facility" />

                <ComboBox
                    ItemsSource="{Binding Facilities}"
                    SelectedIndex="0" />
                <TextBlock
                    FontSize="8"
                    Text="Treatment Region" />

                <DockPanel>

                    <Button
                        Width="20"
                        DockPanel.Dock="Right"
                        FontFamily="Segoe UI Symbol"
                        FontSize="12"
                        Content="&#x2638;"
                        Command="{Binding EditMap}" />
                    <ComboBox

                        ItemsSource="{Binding Regions}"
                        SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged" />
                </DockPanel>
                <TextBlock
                    FontSize="8"
                    Text="InOut" />

                <ComboBox
                    ItemsSource="{Binding Stays}"
                    SelectedIndex="{Binding Stay}" />

                <TextBlock
                    FontSize="8"
                    Text="{Binding Staymessage}" />

                <TextBox />

            </StackPanel>

        </DockPanel>

    </Grid>

</Window>